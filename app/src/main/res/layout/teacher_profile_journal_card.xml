<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="4dp"
    android:layout_margin="2dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:id="@+id/teacher_profile_journal_name_container"
            android:layout_margin="4dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Journal Name"
                android:layout_marginRight="4dp"
                android:textStyle="bold"
                android:textSize="20sp"/>
            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@android:color/black"
                android:layout_marginTop="1dp"
                android:layout_marginBottom="1dp"/>
            <TextView
                android:id="@+id/teacher_profile_journal_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="journal name"
                android:layout_marginLeft="5dp"
                android:textSize="20sp"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/teacher_profile_journal_paper_title_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_below="@+id/teacher_profile_journal_name_container"
            android:layout_margin="4dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Paper Title"
                android:layout_marginRight="4dp"
                android:textStyle="bold"
                android:textSize="20sp"/>
            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@android:color/black"
                android:layout_marginTop="1dp"
                android:layout_marginBottom="1dp"/>
            <TextView
                android:id="@+id/teacher_profile_journal_paper_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="paper title"
                android:layout_marginLeft="5dp"
                android:textSize="20sp"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/teacher_profile_journal_date_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_below="@+id/teacher_profile_journal_paper_title_container"
            android:layout_margin="4dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Publish Date"
                android:layout_marginRight="4dp"
                android:textStyle="bold"
                android:textSize="20sp"/>
            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@android:color/black"
                android:layout_marginTop="1dp"
                android:layout_marginBottom="1dp"/>
            <TextView
                android:id="@+id/teacher_profile_journal_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="10-02-2020"
                android:layout_marginLeft="5dp"
                android:textSize="20sp"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/teacher_profile_journal_type_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_below="@+id/teacher_profile_journal_date_container"
            android:layout_margin="4dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Journal Type"
                android:layout_marginRight="4dp"
                android:textStyle="bold"
                android:textSize="20sp"/>
            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@android:color/black"
                android:layout_marginTop="1dp"
                android:layout_marginBottom="1dp"/>
            <TextView
                android:id="@+id/teacher_profile_journal_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="IEEE"
                android:layout_marginLeft="5dp"
                android:textSize="20sp"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/teacher_profile_journal_if_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_below="@+id/teacher_profile_journal_type_container"
            android:layout_margin="4dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Impact Factor"
                android:layout_marginRight="4dp"
                android:textStyle="bold"
                android:textSize="20sp"/>
            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@android:color/black"
                android:layout_marginTop="1dp"
                android:layout_marginBottom="1dp"/>
            <TextView
                android:id="@+id/teacher_profile_journal_if"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2.3"
                android:layout_marginLeft="5dp"
                android:textSize="20sp"/>
        </LinearLayout>

        <Button
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            android:layout_marginTop="4dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Certificate"
            android:textSize="14sp"
            android:id="@+id/teacher_profile_journal_certificate_download_button"
            android:layout_below="@+id/teacher_profile_journal_if_container"
            android:paddingLeft="8dp"
            android:paddingRight="8dp" />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/teacher_profile_journal_edit_button"
            android:text="Edit"
            android:backgroundTint="#0275d8"
            android:layout_below="@+id/teacher_profile_journal_if_container"
            android:layout_toLeftOf="@+id/teacher_profile_journal_delete_button"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/teacher_profile_journal_delete_button"
            android:text="Delete"
            android:backgroundTint="#d9534f"
            android:shadowColor="#d9534f"
            android:layout_marginLeft="16dp"
            android:layout_below="@+id/teacher_profile_journal_if_container"
            android:layout_alignParentEnd="true"/>
    </RelativeLayout>
</androidx.cardview.widget.CardView>