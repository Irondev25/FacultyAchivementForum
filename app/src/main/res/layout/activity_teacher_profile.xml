<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.teacherProfile.TeacherProfile"
    android:id="@+id/profile_activity"
    android:theme="@style/Theme.LoggedUser"
    android:fitsSystemWindows="true"
    tools:openDrawer="start">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <androidx.appcompat.widget.Toolbar
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@android:color/transparent"
            android:id="@+id/profile_toolbar"
            app:popupTheme="@style/ThemeOverlay.AppCompat.Dark"
            android:elevation="4dp"/>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/teacher_profile_fragment"/>
    </LinearLayout>
    <com.google.android.material.navigation.NavigationView
        android:id="@+id/teacher_profile_navigation"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        app:menu="@menu/teacher_profile_menu"
        android:layout_gravity="start"
        app:headerLayout="@layout/navigation_header"
        android:backgroundTint="#c3fdff"
        />

</androidx.drawerlayout.widget.DrawerLayout>

