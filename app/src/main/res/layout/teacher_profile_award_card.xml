        <!--            android:layout_width="wrap_content"-->
        <!--            android:layout_height="wrap_content"-->
        <!--            android:layout_below="@+id/award_detail_public"-->
        <!--            android:text="Download Certificate"-->
        <!--            android:textSize="12sp"-->
        <!--            android:drawableLeft="@android:drawable/stat_sys_download"/>-->
        <!--        <LinearLayout-->
        <!--            android:layout_width="match_parent"-->
        <!--            android:layout_height="wrap_content"-->
        <!--            android:orientation="horizontal">-->
        <!--            <TextView-->
        <!--                android:layout_width="wrap_content"-->
        <!--                android:layout_height="wrap_content"-->
        <!--        </LinearLayout>-->
        <!--        <ImageButton-->
        <!--            android:layout_width="32dp"-->
        <!--            android:layout_height="32dp"-->
        <!--            android:src="@drawable/award_icon"-->
        <!--            android:layout_below="@+id/award_detail_public"-->
        <!--            />-->
        <Button
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            android:layout_marginTop="4dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Certificate"
            android:textSize="14sp"
            android:id="@+id/teacher_profile_certificate_download_button"
            android:layout_below="@+id/teacher_profile_award_detail"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/teacher_profile_edit_button"
            android:text="Edit"
            android:backgroundTint="#0275d8"
            android:layout_below="@+id/teacher_profile_award_detail"
            android:layout_toLeftOf="@+id/teacher_profile_delete_button"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/teacher_profile_delete_button"
            android:text="Delete"
            android:backgroundTint="#d9534f"
            android:shadowColor="#d9534f"
            android:layout_marginLeft="16dp"
            android:layout_below="@+id/teacher_profile_award_detail"
            android:layout_alignParentEnd="true"/>
    </RelativeLayout>
</androidx.cardview.widget.CardView>