<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.irondev25.facultyachivementforum">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.FacultyAchivementForum"
        android:usesCleartextTraffic="true">
        <activity android:name=".ui.teacherProfile.fragment.award.ProfileAwardEdit"
            android:theme="@style/Theme.LoggedUser"></activity>
        <activity
            android:name=".ui.teacherProfile.TeacherProfile"
            android:theme="@style/Theme.LoggedUser"></activity>
        <activity android:name=".ui.publicTeacherAchivements.TeacherAchivements" />
        <activity android:name=".ui.browseAchivement.AchivementExplorer" />
        <activity android:name=".ui.signup.SignupActivity" />
        <activity
            android:name=".ui.login.LoginActivity"
            android:label="@string/title_activity_login" />
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>